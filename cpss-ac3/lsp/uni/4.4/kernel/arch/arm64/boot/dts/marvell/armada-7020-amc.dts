/*
 * Device Tree file for Marvell Armada 7020 AMC board
 * This board file supports the AMC board configuration
 */

#include "armada-7020.dtsi"

/ {
	model = "Marvell Armada-7020 AMC board setup";
	compatible = "marvell,armada7020-amc", "marvell,armada7020",
			"marvell,armada-ap806";

	#address-cells = <2>;
	#size-cells = <2>;

	chosen { };

	aliases {
		ethernet0 = &cp0_emac0;
		ethernet1 = &cp0_emac2;
	};

	ap806 {
		config-space {
			spi0: spi@510600 {
				status = "okay";
			};

			serial@512000 {
				status = "okay";
			};

			i2c@511000 {
				status = "okay";
				clock-frequency = <100000>;
			};
		};
	};

	cp0 {
		config-space {
			pinctrl@440000 {
				i2c1_pins: i2c-pins-1 {
					marvell,pins = "mpp50", "mpp51";
					marvell,function = "i2c1";
				};

			};

			cp0_usb3h0: usb3@500000 {
				phys = <&cp0_utmi0>;
				phy-names = "usb";
				status = "okay";
			};

			cp0_sata: sata@540000 {
				status = "okay";

				sata-port@1 {
					phys = <&cp0_comphy 5 COMPHY_SATA1>;
					phy-names = "comphy";
					status = "okay";
				};
			};

			sdhci@780000 {
				vqmmc-supply = <&vccq_sdio_reg>;
				bus-width = <4>;
				no-1-8-v;
				broken-cd;
				pinctrl-names = "default";
				pinctrl-0 = <&cp0_sdhci_pins>;
				status = "okay";
			};

			cp0_i2c0: i2c@701000 {
				status = "okay";
				clock-frequency = <100000>;
			};

			cp0_mss_i2c0: i2c@211000 {
				status = "okay";
				clock-frequency = <100000>;
			};

			nand@720000 {
				status = "okay";
			};

			mdio@12a200 {
				#address-cells = <1>;
				#size-cells = <0>;
				status = "okay";
				cp0_phy0: ethernet-phy@1 {
					reg = <1>;
				};
			};

			gop {
				cp0_emac0: mac0 {
					phy-mode = "sfi"; /*lane-4*/
					phys = <&cp0_comphy 4 COMPHY_SFI0>;
					phy-names = "comphy";
				};
				cp0_emac2: mac2 {
					phy-mode = "rgmii"; /* rgmii-1 */
					phy = <&cp0_phy0>;
				};
				cp0_emac3: mac3 {
					phy-mode = "none";
				};
			};

			ppv22@000000 {
				cp0_eth0: eth0@010000 {
					status = "okay";
				};

				cp0_eth1: eth1@020000 {
					status = "okay";
				};
			};

			comphy {
				skip_pcie_power_off;
			};

			cp0_utmi0: utmi@580000 {
				status = "okay";
			};
		};

		pcie0@600000 {
			/* Overwrite the PCIe config address up to 8GB */
			ranges = <0x81000000 0 0xfa000000 0   0xfa000000 0   0x10000 /* downstream I/O */
				  0x82000000 0 0x0        0x8 0x0         0x2 0x0>; /* non-prefetchable memory */
			num-lanes = <4>;
			status = "okay";
		};
		vccq_sdio_reg: regulator@1 {
			compatible = "regulator-fixed";
			regulator-name = "vccq-sdio-reg";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
			status = "okay";
		};
	};
};
