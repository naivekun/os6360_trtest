# $(warning "Started")
MODULES := generic
addExMx :=

ifeq (EXISTS, $(EX_FAMILY))
        addExMx = YES
endif
ifeq (EXISTS, $(MX_FAMILY))
        addExMx = YES
endif
ifeq (EXISTS, $(CHX_FAMILY))
        MODULES += dxCh
endif
ifeq (EXISTS, $(SAL_FAMILY))
        MODULES += dxSal
endif
ifeq (YES, $(addExMx))
        MODULES += exMx
endif
ifeq (EXISTS, $(PM_FAMILY))
        MODULES += exMxPm
endif

